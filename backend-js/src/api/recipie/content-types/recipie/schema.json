{
  "kind": "collectionType",
  "collectionName": "recipies",
  "info": {
    "singularName": "recipie",
    "pluralName": "recipies",
    "displayName": "Recipie",
    "description": "Recipe collection"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text",
      "required": false
    },
    "ingredients": {
      "type": "json",
      "required": false
    },
    "instructions": {
      "type": "text",
      "required": false
    },
    "duration": {
      "type": "integer",
      "required": false,
      "min": 1
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "Facile",
        "Interm√©diaire",
        "Difficile"
      ],
      "required": false
    },
    "servings": {
      "type": "integer",
      "required": false,
      "min": 1
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "recipieCategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::recipie-category.recipie-category"
    },
    "isRobotCompatible": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "tags": {
      "type": "json",
      "required": false
    },
    "rating": {
      "type": "decimal",
      "required": false,
      "min": 0,
      "max": 5
    },
    "author": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
