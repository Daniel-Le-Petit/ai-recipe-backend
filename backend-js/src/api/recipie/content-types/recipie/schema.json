{
  "kind": "collectionType",
  "collectionName": "recipies",
  "info": {
    "singularName": "recipie",
    "pluralName": "recipies",
    "displayName": "Recipie"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "ingredients": {
      "type": "json"
    },
    "instructions": {
      "type": "text"
    },
    "duration": {
      "type": "integer"
    },
    "difficulty": {
      "type": "enumeration",
      "enum": [
        "Facile",
        "Interm√©diaire",
        "Difficile"
      ]
    },
    "servings": {
      "type": "integer",
      "min": 1
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "recipeState": {
      "type": "enumeration",
      "default": "draft",
      "enum": [
        "draft",
        "saved",
        "submitted",
        "approved",
        "ordered",
        "completed",
        "archived",
        "rejected"
      ]
    },
    "recipieCategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::recipie-category.recipie-category",
      "inversedBy": "recipies"
    },
    "isRobotCompatible": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "json"
    },
    "rating": {
      "type": "decimal",
      "max": 5
    },
    "RecipeUser": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user" ,
      "inversedBy": "recipies"
    }
  }
}
